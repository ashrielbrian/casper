{
  "name": "casper",
  "displayName": "Casper",
  "version": "0.0.1",
  "description": "A basic Plasmo extension.",
  "author": "Brian T",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "package": "plasmo package"
  },
  "dependencies": {
    "@xenova/transformers": "^2.17.2",
    "plasmo": "0.89.2",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "@types/chrome": "0.0.258",
    "@types/node": "20.11.5",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "prettier": "3.2.4",
    "typescript": "5.3.3"
  },
  "manifest": {
    "background": {
      "service_worker": "background.ts",
      "type": "module"
    },
    "host_permissions": [
      "https://*/*"
    ],
    "permissions": [
      "tabs",
      "contextMenus"
    ],
    "content_security_policy": {
      "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'; worker-src 'self'"
    },
    "web_accessible_resources": [
      {
        "resources": [
          "dist"
        ],
        "matches": [
          "<all_urls>"
        ]
      }
    ]
  }
}